<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    {{>headerlink}}

    <title>Weather App</title>
  </head>
  <body>
      {{>navbar}}

      <!-- main header -->

      <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main-content">
                    <form class="temp_form">
                        <input type="text" name="" id="cityName" placeholder="Enter Your City Name" autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>
                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Thursday</p> 
                        <p id="today_date">10 Dec</p> 
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Output Here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val"> 0</span><sup>0</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud"></i></p>
                        </div> 
                    </div>
                </div>
            </div>
        </div>        
      </div>
      <!-- Footer -->
     {{>footer}}
     <script src="js/main.js"></script>

     <script>
         const day= document.getElementById('day')
          const getCurrentDay = () => {
        var weekday = new Array(7);
        weekday[0] = "Sunday";
        weekday[1] = "Monday";
        weekday[2] = "Tue";
        weekday[3] = "Wed";
        weekday[4] = "Thursday";
        weekday[5] = "Friday";
        weekday[6] = "Saturday";

        let currentTime = new Date();
        days = weekday[currentTime.getDay()];
        let day= document.getElementById('day');

        day.innerText =  days;
      };

      getCurrentDay();
     </script>
  </body>
</html>